{
  "compilerOptions": {
    
   
    "module": "commonjs", 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,    
     "target": "ES2020",
     
  
    "moduleResolution": "node",
  
   
 
   
    "skipLibCheck": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}